<odoo>
    <!-- Action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <!-- Filter Default -->
        <field name="context">{'search_default_available': True}</field>
    </record>

    <!-- Search and Filter -->
    <record id="estate_property_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.view.search.filter</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/> 
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <filter name="available" string="Available" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <filter name="postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
            </search> 
        </field>
    </record>
    
    <!-- list -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <!-- <tree default_order="id asc"> = untuk mengurutkan dari yang terkecil ke terbesar ini di chapter 11--> 
            <tree decoration-success="state in ['offer_received','offer_accepted']" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'" 
            decoration-danger = "state == 'canceled'">

                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
                <field name="bedrooms" optional="hide"/>
                <field name="living_area" optional="hide"/>
                <field name="expected_price"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state"/>
            </tree>      
        </field>
    </record>

    <!-- Form -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                <!-- Action Bottons -->
                    <button name="action_sold" type="object" string="Sold" invisible="state != 'offer_accepted'"/>  <!-- invisible="state in ['sold', 'canceled'] kalok ini berfungsi agar tombol sold dan juga cancelnya hilang setelah salah satu dari mereka di tekan -->
                    <button name="action_cancel" type="object" string="Cancel" invisible="state != 'offer_accepted'"/>
                <!-- Statusbar -->
                    <field name="state" widget="statusbar" statusbar_visible="new, offer_received, offer_accepted, sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                       <h1> <field name="name"/></h1>
                    </div>
                    <group>
                        <!-- yang class="pb-3 itu berfungsi untuk memberi enter di property tagnya itu merupakan class dari bootstrap" -->
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" class="pb-3"/>
                        <group>
                            <field name="property_type_id" options="{'no_create': true}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="state" groups="base.group_no_one"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>            
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/> 
                                <field name="bedrooms"/> 
                                <field name="living_area"/> 
                                <field name="facades"/> 
                                <field name="garage"/> 
                                <field name="garden"/> 
                                <field name="garden_area" invisible = "not garden"/> 
                                <field name="garden_orientation" invisible = "not garden"/> 
                                <field name="total_area"/> 
                            </group>
                        </page>
                        <page string="Offers">
<!-- dengan kita memanggil field name = "offer_ids" aja dia langsung otomasti terbuat pergram di tampilan UI nya  sesuai dengan view nya yang ada di models/estate_property_offer_py/. offer_ids kita dapat dari models/estate.property.py jadi ketika kita memanggil offer_ids nya ke views dia akan otomatis memanggil one2many dan viewnya akan di ambil dari views/estate_property_offer_view-->
                            <field name="offer_ids" readonly="state in ['offer_accepted', 'sold', 'canceled']"/>    
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                        <page string="Active">
                            <group>
                                <field name="active"/> 
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- kanban -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml"> 
            <kanban default_group_by = "state" groups_draggable="False" records_draggable="False">
                <field name="state"/>
                <templates> 
                    <t t-name="kanban-box">
                        <div class ="oe_kanban_global_click"> 
                            <div>
                                <strong><field name="name"/></strong>
                            </div>
                            <div>
                                Expected Price: <field name="expected_price"/>
                            </div>
                            <!-- the best price is only displayed when an offer is received.  -->
                            <div t-if="record.state.raw_value == 'offer_received'">
                                Best Price: <field name="best_price"/>
                            </div>
                            <!-- the selling price is only displayed when an offer is accepted. -->
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                Selling Price: <field name="selling_price"/>
                            </div>
                            <div>
                                <field name="tag_ids" options="{'color_field': 'color'}" class="pb-3"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>     